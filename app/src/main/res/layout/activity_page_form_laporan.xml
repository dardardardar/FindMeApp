<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    tools:context=".PageFormLaporan_Activity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/menu_title"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Form Laporan"
            android:textAlignment="center"
            android:textColor="@color/colorFont1"
            android:textSize="30dp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:columnCount="2"
            android:rowCount="4"
            >

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textColor="@color/colorFont1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:layout_marginTop="20dp"
                android:id="@+id/form_name_field"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:background="@drawable/txtarea_style"
                android:inputType="text"
                android:hint="Masukkan nama orang yang dicari/ditemukan"
                android:textSize="10dp"
                />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Lahir"
                android:textColor="@color/colorFont1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:layout_marginTop="20dp"
                android:id="@+id/form_tgl_lahir"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:background="@drawable/txtarea_style"
                android:inputType="datetime"
                android:hint="mm/dd/yyyy"
                android:textSize="12dp"
                />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Umur"
                android:textColor="@color/colorFont1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:layout_marginTop="20dp"
                android:id="@+id/form_umur"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:background="@drawable/txtarea_style"
                android:inputType="number"
                android:hint="Umur"
                android:textSize="12dp"
                />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Kelamin"
                android:textColor="@color/colorFont1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <GridLayout
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="1"
                android:layout_gravity="center"
                >

                <RadioGroup
                    android:id="@+id/rbGroup"
                    android:orientation="horizontal"
                    >
                    <RadioButton
                        android:id="@+id/rbMale"
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Laki - laki"
                        />

                    <RadioButton
                        android:id="@+id/rbFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Perempuan"
                        />
                </RadioGroup>

            </GridLayout>

        </GridLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keterangan"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/keterangan_field"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/txtarea_style"
            android:inputType="textMultiLine"
            android:lines="3"
            android:hint="Minimal 100 karakter||Maksimal 500 karakter"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/upload_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Upload gambar orang yang dicari/ditemukan"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. HP/ No.Telp"
                android:textColor="@color/colorFont1"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/form_telp"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/txtarea_style"
                android:inputType="number"
                android:hint="Masukkan No.Hp yang dapat dihubungi"
                android:textSize="12dp"
                />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipe Laporan"
                android:textColor="@color/colorFont1"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <GridLayout
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="1"
                android:rowCount="2"
                >

                <RadioGroup
                    android:id="@+id/rbGroup_tipe"
                    android:orientation="vertical"
                    >
                    <RadioButton
                        android:id="@+id/rbLost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lost (Dicari)"
                        />

                    <RadioButton
                        android:id="@+id/rbFound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Found (Ditemukan)"
                        />
                </RadioGroup>

            </GridLayout>

        </GridLayout>

        <TextView
            android:id="@+id/txt_error"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="14dp"
            android:textColor="@color/colorErrorFont"
            />

        <Button
            android:id="@+id/submit_Btn"
            android:layout_marginTop="20dp"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="Submit"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:background="@drawable/btn_style2"
            android:layout_gravity="center"
            />

    </LinearLayout>

</ScrollView>