<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="233dp"
    android:orientation="vertical"
    android:background="@color/colorNaviHeader"
    android:gravity="bottom"
    android:padding="5dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@drawable/navi_profile_background"
        android:src="@drawable/profile2" />

    <TextView
        android:id="@+id/user_usrname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="NAMA_USER"
        android:textAlignment="center"
        android:textColor="@color/colorFont1"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_profil"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/navi_profile_btn"
        android:text="Ubah Profil"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="15dp"
        android:textStyle="bold" />

</LinearLayout>